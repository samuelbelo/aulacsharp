    </form>
</div>

<div class="text-center">
    <form method="get" asp-action="OnGet">
        <input type="text" name="arg">
        <button>Enviar asp-action</button>
    </form>
</div>

<div class="text-center">
    <form method="post" asp-action="OnPost">
        <input type="text" name="arg">
        <button>Enviar asp-action post</button>
    </form>
</div>

<div class="text-center">
    <form id="fetchForm">
        <input type="text" name="arg" id="fetchInput" />
    </form>
        <button id="fetchButtonPost">enviar fetch post</button>

    <script>
        const fetchForm = document.getElementById("fetchForm");

        const fetchButtonPost = document.getElementById("fetchButtonPost")

        fetchButtonPost.onClick = () => {
            fetch("Home/OnPost", {
                method: "post",
                body: new FormData(fetchForm)
            })
            .then(res => res.text())
            .then(res => alert(res))

        }
    </script>
</div>