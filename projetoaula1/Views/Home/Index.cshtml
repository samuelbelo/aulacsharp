}

<div class="text-center">
    <form method="get" action="http://localhost:54678/home/OnGet">
        <input type="text" name="arg">
        <button>Enviar</button>
    </form>
</div>

<div class="text-center">
    <form method="post" action="http://localhost:54678/home/OnPost">
        <input type="text" name="arg">
